# 数据库类型（支持 sqlite 或 mysql）
# sqlite: 使用 SQLite 数据库，适合小型项目或开发环境
# mysql: 使用 MySQL 数据库，适合生产环境或需要多用户支持的场景
DB_TYPE=sqlite 

# MySQL 数据库连接字符串（仅在 DB_TYPE 为 mysql 时使用）
# 格式：username:password@tcp(host:port)/dbname?charset=utf8mb4&parseTime=True&loc=Local
# 示例：root:password@tcp(127.0.0.1:3306)/mydatabase
MYSQL_DSN=username:password@tcp(localhost:3306)/dbname?charset=utf8mb4&parseTime=True&loc=Local

# SQLite 数据库文件路径（仅在 DB_TYPE 为 sqlite 时使用）
# 示例：./auth.sqlite 表示当前目录下的 auth.sqlite 文件
SQLITE_PATH=./auth.sqlite

# Turnstile 的密钥（用于后端验证验证码）
# 从 Cloudflare Turnstile 获取的 Secret Key
TURNSTILE_SECRET_KEY=0x4AAAAAAA9mI--dbbeMllQO8u7Zw0cR27s

# Turnstile 的站点密钥（用于前端加载验证码）
# 从 Cloudflare Turnstile 获取的 Site Key
TURNSTILE_SITE_KEY=10x4AAAAAAA9mI-WwxmM4n-vd

# 允许的跨域来源（CORS 设置）
# 用于指定允许访问 API 的前端地址
# 示例：http://localhost:5173 表示本地开发环境的前端地址
ALLOWED_ORIGIN=http://localhost:5173

# API 基础 URL（前端使用）
# 用于前端与后端交互的基础 URL
# 示例：http://localhost:8080 表示后端运行在本地的 8080 端口
VUE_APP_API_BASE_URL=http://localhost:8080

# 网站名称（前端显示）
# 示例：GoAuth 表示网站的名称
VUE_APP_SITE_NAME=GoAuth

# 支持邮箱（前端显示）
# 用于用户联系支持的邮箱地址
# 示例：support@example.com
VUE_APP_SUPPORT_EMAIL=support@example.com

# API 基础 URL（后端使用）
# 用于后端生成链接或其他需要的场景
API_BASE_URL=http://localhost:8080

# SMTP 邮件服务器地址
# 用于发送邮件（如找回密码、通知等）
# 示例：smtp.example.com 表示邮件服务器地址
SMTP_SERVER=smtp.example.com

# SMTP 邮件服务器端口
# 通常为 587（TLS）或 465（SSL）
SMTP_PORT=587

# SMTP 用户名
# 用于登录邮件服务器的用户名（通常是邮箱地址）
SMTP_USER=your-email@example.com

# SMTP 密码
# 用于登录邮件服务器的密码
SMTP_PASSWORD=your-password

VUE_APP_API_BASE=http://localhost:8080
